server {
	listen          80;
	server_name     postgre.yourdomain.com;

	# [ debug | info | notice | warn | error | crit ]
	#access_log     /var/log/postgre.yourdomain.com_access.log main;
	error_log       /var/log/postgre.yourdomain.com_error.log error;

	root /var/www/phppgadmin;
	index index.php;

	location / {
		allow   10.0.0.0/24;      # your network
		deny    all;
	}

	## Parse all .php
	location ~ .php$ {
		include phpfpm_params;
		allow   10.0.0.0/24;
		deny    all;
	}

	location ~ /\.ht {
		deny all;
	}
}
